{
  "compilerOptions": {
    "target": "es6",
    "module": "commonjs",
    "jsx": "react-jsx",                // ðŸ‘ˆ obligatoire pour le JSX
    "esModuleInterop": true,           // ðŸ‘ˆ rÃ¨gle les problÃ¨mes d'import React
    "allowSyntheticDefaultImports": true,
    "strict": true,
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "forceConsistentCasingInFileNames": true,
    "noEmit": true,
    "skipLibCheck": true
